@model CreateReceiptDto

@{
    ViewData["Title"] = " إضافة سند صرف جديد ";
    Layout = null;
}

<form asp-action="Create" class="ajaxForm" tname="#kt_datatable">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="@ViewBag.customer"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ReceiptNumber" class="control-label"></label>
                <input asp-for="ReceiptNumber" class="form-control" />
                <span asp-validation-for="ReceiptNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="InvoiceType" class="control-label"></label>
                <select asp-for="InvoiceType" class="form-control">
                    <option value="@InvoiceType.Cash">نقدي</option>
                    <option value="@InvoiceType.Credit"> بطاقة بنكية</option>
                </select>
                <span asp-validation-for="InvoiceType" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="@ViewBag.user"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="RentContractId" class="control-label"></label>
                <select asp-for="RentContractId" class="form-control" asp-items="@ViewBag.rentContract"></select>
                <span asp-validation-for="RentContractId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="RealEstateId" class="control-label"></label>
                <select asp-for="RealEstateId" class="form-control" asp-items="@ViewBag.realEstate"></select>
                <span asp-validation-for="RealEstateId" class="text-danger"></span>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ValueReceipt" class="control-label"></label>
                <input asp-for="ValueReceipt" class="form-control" />
                <span asp-validation-for="ValueReceipt" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="DateTimeStart" class="control-label"></label>
                <input asp-for="DateTimeStart" class="form-control" />
                <span asp-validation-for="DateTimeStart" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="DateTimeEnd" class="control-label"></label>
                <input asp-for="DateTimeEnd" class="form-control" />
                <span asp-validation-for="DateTimeEnd" class="text-danger"></span>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="statment" class="control-label"></label>
                <input asp-for="statment" class="form-control" />
                <span asp-validation-for="statment" class="text-danger"></span>
            </div>
        </div>

    </div>
    <div class="form-group">
        <input type="submit" value="إضافة" class="btn btn-primary" />
        <a data-dismiss="modal" aria-label="Close" class="btn btn-danger">الغاء</a>
    </div>
</form>


<script>
    PageLoadActions();
</script>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>